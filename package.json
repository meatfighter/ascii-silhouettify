{
  "name": "ascii-silouettify",
  "version": "1.0.0",
  "type": "module",
  "module": "./dist/main.bundle.js",
  "scripts": {
    "clean": "rimraf ./dist ./bin",
    "build": "npm run clean && rollup -c",
    "run": "node ./dist/main.bundle.js",
    "pack": "npm pack && shx mkdir -p bin && shx mv *.tgz bin/ascii-silouettify.tgz",
    "all": "npm run build && npm run pack",
    "install-global": "npm install -g ./bin/ascii-silouettify.tgz",
    "uninstall-global": "npm uninstall -g ascii-silouettify",
    "run-global": "ascii-silouettify"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/chroma-js": "^2.4.4",
    "@types/glob": "^8.1.0",
    "@types/node": "^20.12.2",
    "@types/sharp": "^0.32.0",
    "rimraf": "^5.0.5",
    "rollup": "^4.13.0",
    "rollup-plugin-copy": "^3.5.0",
    "shx": "^0.3.4",
    "tslib": "^2.6.2",
    "tsx": "^4.7.1",
    "typescript": "^5.4.5"
  },
  "files": [
    "dist"
  ],
  "bin": {
    "ascii-silouettify": "./dist/main.bundle.js"
  },
  "dependencies": {
    "chroma-js": "^2.4.2",
    "glob": "^10.3.12",
    "sharp": "^0.33.3"
  }
}
